<Window x:Class="Интерфейс_ИС_Домовой.AllApplications"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Интерфейс_ИС_Домовой"
        mc:Ignorable="d"
        Title="AllApplications" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBox" x:Key="RoundedTextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="5"
                Padding="2">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>
    <Grid Margin="0,0,0,-16">
        <Grid.Background>
            <ImageBrush ImageSource="/i.jpg"/>
        </Grid.Background>
        <Label Content="Заявки" HorizontalAlignment="Left" Height="44" VerticalAlignment="Top" Width="292" FontSize="24" FontWeight="Bold" HorizontalContentAlignment="Center" Margin="252,44,0,0"/>
        <DataGrid HorizontalAlignment="Left" Height="227" VerticalAlignment="Top" Width="737" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="27,171,0,0" RenderTransformOrigin="0.5,0.5" x:Name="applications" >
            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.198"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.397"/>
                </TransformGroup>
            </DataGrid.RenderTransform>
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FF007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="8,4"/>
                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                    <Setter Property="BorderBrush" Value="#FF2D8FD5"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер" 
                                      Binding="{Binding Number}" 
                                      Width="100"/>
                <DataGridTextColumn Header="Описание" 
                                      Binding="{Binding Description}" 
                                      Width="*"/>
                <DataGridTextColumn Header="Дата отправки" 
                                      Binding="{Binding Date, StringFormat={}{0:dd.MM.yyyy}}" 
                                      Width="120"/>
                <DataGridTextColumn Header="Срочность" 
                                      Binding="{Binding Urgency}" 
                                      Width="100"/>
                <DataGridTextColumn Header="Статус" 
                                      Binding="{Binding Status}" 
                                      Width="100"/>
            </DataGrid.Columns>




        </DataGrid>
        <Label Content="Поиск" HorizontalAlignment="Left" Height="38" VerticalAlignment="Top" Width="93" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" Margin="10,128,0,0" RenderTransformOrigin="0.339,0.709"/>
        <TextBox x:Name="txtSearch" 
            Style="{StaticResource RoundedTextBox}"
            Background="DarkBlue"
            Foreground="White" 
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Top" 
            Width="193" Height="28" 
            TabIndex="0" Margin="103,133,0,0" HorizontalAlignment="Left" FontSize="14"/>
        <Button 
            x:Name="BtnSearch" 
            Content=""
            Foreground="White"
            HorizontalAlignment="Left" 
            Margin="307,134,0,0" 
            VerticalAlignment="Top" Height="26" Width="29" FontSize="20" FontWeight="Bold" Click="BtnSearch_Click" >
            <Button.Background>
                <ImageBrush ImageSource="/pngwing.com (7).png" TileMode="FlipX" Stretch="Uniform"/>
            </Button.Background>
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border CornerRadius="5" 
                        Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}">

                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Menu VerticalAlignment ="Top" HorizontalAlignment="Stretch"  Margin="0,0,4,0" Height="23" Width="796" MaxWidth="800" MaxHeight="450" >
            <MenuItem Header="Файл">
                <Separator/>
                <MenuItem Header="Добавить новую заявку" >
                    <MenuItem.Icon>
                        <Path Width="16" Height="16" Fill="Green" 
                       Data="M8,0 L10,0 L10,6 L16,6 L16,8 L10,8 L10,14 L8,14 L8,8 L2,8 L2,6 L8,6 Z"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Редактировать заявку" >
                    <MenuItem.Icon>
                        <Path Width="16" Height="16" Fill="DarkBlue" 
                       Data="M14.1,1.6 L12.4,3.3 L14.7,5.6 L16.4,3.9 L14.1,1.6 M11.7,4 L3,12.7 L3,15 L5.3,15 L14,6.3 L11.7,4 Z"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Удалить заявку" >
                    <MenuItem.Icon>
                        <Path Width="16" Height="16" Fill="DarkRed" 
                       Data="M6,2 L10,2 L10,3 L14,3 L14,5 L2,5 L2,3 L6,3 M3,6 L13,6 L12,15 L4,15"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Поиск заявки">
                    <MenuItem.Icon>
                        <Path Width="16" Height="16" Stroke="Black" StrokeThickness="2" Fill="Transparent"
                          Data="M10,2
                                A7,7 0 1 1 9.99,2
                                M14.5,14.5
                                L20,20" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Выход" />
            </MenuItem>
            <MenuItem Header="История заявок">
                <MenuItem Header="Выполненые заявки"/>
                <MenuItem Header="Новые заявки"/>
            </MenuItem>

            <MenuItem Header="Статистика">
                <MenuItem Header="Отчет за день"/>
                <MenuItem Header="Отчет за месяц"/>
            </MenuItem>
            <MenuItem Header="Справка">
                <MenuItem Header="Руководство пользователя"/>
                <Separator/>
                <MenuItem Header="О программе"/>
            </MenuItem>
        </Menu>



    </Grid>
</Window>
