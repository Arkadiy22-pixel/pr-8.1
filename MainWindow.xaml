<Window x:Class="Интерфейс_ИС_Домовой.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Интерфейс_ИС_Домовой"
        mc:Ignorable="d"
        Title="Войти" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBox" x:Key="RoundedTextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5"
                            Padding="2">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="PasswordBox" x:Key="RoundedPasswordBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="5"
                        Padding="2">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

    </Window.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/i.jpg"/>
        </Grid.Background>
        <Label Content="АИС &quot;Домовой&quot;" HorizontalAlignment="Center" Height="46" Margin="0,36,0,0" VerticalAlignment="Top" Width="202" FontSize="24" FontWeight="Bold"/>
        <PasswordBox x:Name="txtBPswd" 
                     Style="{StaticResource RoundedPasswordBox}"
                     Background="DarkBlue"
                     Foreground="White"
                     HorizontalAlignment="Left" 
                     Margin="181,214,0,0" 
                     VerticalAlignment="Top" 
                     Width="396" Height="26" 
                     TabIndex="1"/>
        <TextBox x:Name="txtBLog" 
                 Style="{StaticResource RoundedTextBox}"
                 Background="DarkBlue"
                 Foreground="White"
                 HorizontalAlignment="Left" 
                 Margin="181,167,0,0" 
                 TextWrapping="Wrap" 
                 Text="" 
                 VerticalAlignment="Top" 
                 Width="396" Height="24" 
                 TabIndex="0"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="81,155,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" Height="42"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="73,202,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" Height="42" RenderTransformOrigin="0.542,1.408"/>
        <Button 
            x:Name="BtnLog" 
            Content="Войти" 
            Background="DarkBlue"
            Foreground="White"
            HorizontalAlignment="Left" 
            Margin="340,260,0,0" 
            VerticalAlignment="Top" Height="37" Width="78" FontSize="20" FontWeight="Bold" Click="BtnLog_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="5" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <Button.Style>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard Name="BlinkStoryboard">
                                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                        <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="White" Duration="0:0:1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <StopStoryboard BeginStoryboardName="BlinkStoryboard"/>
                            </Trigger.ExitActions>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Label x:Name="labelPaswdRecovery" 
               Content="Забыли пароль?" 
               HorizontalAlignment="Left" 
               Margin="592,211,0,0" 
               VerticalAlignment="Top" 
               FontSize="16" 
               FontWeight="Bold"
               Background="#00000000" 
               Foreground="#FFC30E0E" MouseLeftButtonDown="labelPaswdRecovery_MouseLeftButtonDown" RenderTransformOrigin="0.618,0.481"/>









    </Grid>
</Window>
