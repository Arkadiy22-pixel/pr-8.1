<Window x:Class="Интерфейс_ИС_Домовой.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Интерфейс_ИС_Домовой"
        mc:Ignorable="d"
        Title="Войти" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBox" x:Key="RoundedTextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5"
                            Padding="2">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="PasswordBox" x:Key="RoundedPasswordBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="5"
                        Padding="2">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Фоновое изображение -->
        <DockPanel.Background>
            <ImageBrush ImageSource="/i.jpg"/>
        </DockPanel.Background>

        <!-- Заголовок приложения -->
        <Label Content="АИС &quot;Домовой&quot;" 
               DockPanel.Dock="Top"
               HorizontalAlignment="Center" 
               Height="46" 
               Margin="0,36" 
               FontSize="24" 
               FontWeight="Bold"/>

        <!-- Основная форма -->
        <StackPanel Width="628" DockPanel.Dock ="Left" Height="198">
            <DockPanel Margin="0,0,0,20">
                <Label Content="Логин" 
                       DockPanel.Dock="Left"
                       FontSize="24" 
                       FontWeight="Bold" 
                       Width="93"/>

                <TextBox x:Name="txtBLog" 
                         Style="{StaticResource RoundedTextBox}"
                         Background="DarkBlue"
                         Foreground="White"
                         Height="24" 
                         TabIndex="0" Width="476"/>
            </DockPanel>

            <!-- Поле пароля с ссылкой восстановления -->
            <DockPanel Margin="0,0,0,30">
                <Label Content="Пароль" 
                       DockPanel.Dock="Left"
                       FontSize="24" 
                       FontWeight="Bold" 
                       Width="99" Height="52" Margin="0,-30,0,0"
                       />

                <StackPanel Width="504">

                    <PasswordBox x:Name="txtBPswd" 
                                 Style="{StaticResource RoundedPasswordBox}"
                                 Background="DarkBlue"
                                 Foreground="White"
                                 Height="24" 
                                 TabIndex="1" Width="473" Margin="-7,0,0,0"/>

                    <Label x:Name="labelPaswdRecovery" 
                           Content="Забыли пароль?" 
                           FontSize="16" 
                           FontWeight="Bold"
                           Background="Transparent" 
                           Foreground="#FFC30E0E" 
                           MouseLeftButtonDown="labelPaswdRecovery_MouseLeftButtonDown"
                           HorizontalAlignment="Right"
                           Margin="0,5,0,0"/>
                </StackPanel>
            </DockPanel>
            <Button x:Name="BtnLog" 
                    Content="Войти" 
                    Background="DarkBlue"
                    Foreground="White"
                    Height="37" 
                    Width="120" 
                    FontSize="20" 
                    FontWeight="Bold" 
                    Click="BtnLog_Click"
                    >
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="5" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard x:Name="BlinkStoryboard">
                                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                            <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                    To="White" Duration="0:0:1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <StopStoryboard BeginStoryboardName="BlinkStoryboard"/>
                                </Trigger.ExitActions>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </DockPanel>
</Window>